doctype html
html
  head
    meta(charset='UTF-8', name='viewport', content='width=device-width, initial-scale=1')
    title Personal Site

    body
      .background
        .image

      main
        .box
          h1 Luis Chapman
          h4 Email: 
            a(href="mailto:Luis@lmc-productions.com") Luis@lmc-productions.com
          h4 Github: 
            a(href="https://github.com/lschpmn") https://github.com/lschpmn
          p(style="padding-top: 20px") Or contact me:
          form.search(id="email" @submit="sendEmail" @submit.prevent)
            .error {{error}}
            input(type="text" v-model="emailText")
            button(type="button" @click="sendEmail") {{submitText}}

      //for blurred background
      div(style="display: none;")
        <svg version="1.1" xmlns="http://www.w3.org/2000/svg">
        <filter id="svgfilter">
        <feGaussianBlur stdDeviation="3" />
        <feComponentTransfer>
        <feFuncR type="linear" slope="0.6"/>
        <feFuncG type="linear" slope="0.6"/>
        <feFuncB type="linear" slope="0.6"/>
        </feComponentTransfer>
        </filter>
        </svg>
      script(src='dep.js')